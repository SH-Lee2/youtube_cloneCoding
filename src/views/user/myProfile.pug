block content 
    .container
        include ../parts/side.pug
        .profile-container
            .profile-header 
                img(src="/"+user.avatarUrl , width="200px" , height="200px").profileImg
                .profile-meta
                    p.name=user.name
                    if Number(users.meta.subscribers) !== 0
                        p.subscribers #{users.meta.subscribers} 명
                    else 
                        p.subscribers 구독자 없음
            ul.profile-menu 
                li.select 
                    span 홈
                li 
                    span 동영상
                li 
                    span 재생목록
                li 
                    span 커뮤니티
                li 
                    span 정보
                li 
                    i.fas.fa-search
            .video-grid
            
